<div class="container mt-5">
	<div class="row">
		<div class="col-12">
			<div class="card shadow-lg">
				<div class="card-body">
					<div class="row">
						<div class="col-6">
							<h3 class="card-title text-start"> {{produto.nome}} </h3>						
						</div>
						<div class="col-6">
							<h3 class="card-title text-end text-success"><a href="" class="me-4 text-danger"><i class="far fa-heart"></i></a><a href="/usuario/carrinho/add/{{produto._id}}" class="me-4"><i class="fas fa-shopping-cart"></i></a> <strong> {{produto.preco}},00 R$ </strong> </h3>	
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 col-sm-12">
			<div class="card shadow-lg mt-4"  style="width: 20rem;">
				<img src="{{produto.urlImage}}" class="card-img-top" alt="..." height="300" width="300">
			</div>
		</div>
		<div class="col-lg-5 col-sm-12">
			<div class="card shadow-lg mt-4">
				<div class="card-body">
					<h5 class="card-title text-start"> Categoria: {{produto.categoria}} </h5>
				</div>
			</div>
			<div class="card shadow-lg mt-4">
				<div class="card-body">
					<h5 class="card-title text-start"> Anunciador: {{usuario.nome}} </h5>
				</div>
			</div>
			<div class="card shadow-lg mt-4">
				<div class="card-body">
					<h5 class="card-title text-start"> Email: {{usuario.email}} </h5>
				</div>
			</div>
		</div>
		<div class="col-lg-3 col-sm-12">
			<div class="card shadow-lg mt-4">
				<div class="card-body">
					<h5 class="card-title text-muted" style="text-align: justify;"> {{produto.descricao}} </h5>
				</div>
			</div>
		</div>
	</div>
	<div class="row justify-content-end">
		<div class="col-12 text-end">
			<buttom href="" class="btn btn-lg btn-success"> Comprar </buttom>
		</div>
	</div>
</div>

